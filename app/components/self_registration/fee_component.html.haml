- if group.present?
  %aside.card{id: :fees}
    .card-body
      %h2.card-title=title
      %ul.list-unstyled.card-text
        %li=annual_fee
        %li=inscription_fee
        %li.bold=total
        - birthdays.each do |birthday|
          %li= birthday
- else
  #fees{display: 'none'}
