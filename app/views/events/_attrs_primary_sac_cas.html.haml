%dl.dl-horizontal
  - entry.used?(:language) do
    = labeled_attr(entry, :language)

  - entry.used?(:accommodation) do
    = labeled_attr(entry, :accommodation)

  - entry.used?(:meals) do
    = labeled_attr(entry, :meals)

  - entry.used?(:start_point_of_time) do
    = labeled_attr(entry, :start_point_of_time)
  - if entry.is_a?(Event::Course)
    = labeled t("events.form_tabs.prices") do
      - [:price_member, :price_regular, :price_subsidized, :price_js_active_member, :price_js_active_regular, :price_js_passive_member, :price_js_passive_regular].each do |price|
        - if entry.send(price).present?
          #{entry.model.class.human_attribute_name(price)} CHF #{entry.send(price)}<br>
