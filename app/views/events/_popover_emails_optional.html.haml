%h4=label

%hr
%p=t(".prompt_email_choice")

= standard_form(entry, url: state_group_event_path(params[:group_id], params[:id], {state: state}), method: :put) do |f|
  = button_toolbar(f, toolbar_class: nil) do
    = submit_button(f, t('.submit_with_emails'))
    = submit_button(f, t('.submit_without_emails'), name: :skip_emails, value: true)
    = cancel_link('#')
