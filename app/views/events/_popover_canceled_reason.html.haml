%p= t('.cancel_info', name: entry.name, number: entry.number)

= standard_form(entry, url: state_group_event_path(params[:group_id], params[:id], {state: :canceled}), method: :put) do |f|
  = f.labeled_collection_select(:canceled_reason, entry.model.class.canceled_reason_labels, :first, :last, { prompt: true}, { class: 'form-select form-select-sm', required: true })
  = f.indented do
    = f.boolean_field(:inform_participants, caption: t('.inform_participants_caption'))

  = button_toolbar(f, toolbar_class: nil) do
    = submit_button(f, t('.cancel_button'), data: { confirm: t('.cancel_confirmation', name: entry.name, number: entry.number)})
    = cancel_link('#')
