%aside.card{id: :fees}
  .card-body
    %table.table
      %thead
        %tr
          %th=t('.annual_price_header')
          - if wizard.shipping_abroad?
            %th=t('.delivery_country_header')
      %tbody
        %tr
          %td=t('.price_with_vat', amount: format("%2.f", wizard.calculated_costs))
          - if wizard.shipping_abroad?
            %td=wizard.shipping_country

    %b=t('.duration_title')
    %p.mb-3=t('.duration_text')
