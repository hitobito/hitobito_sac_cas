= f.fields_for(:main_person_attributes, entry.main_person) do |ff|
  = ff.error_messages
  = ff.labeled(:newsletter, '&nbsp;'.html_safe) do
    %label.checkbox
      = ff.check_box :newsletter
      = t('.newsletter')

  = field_set_tag do
    = ff.labeled_input_field(:promocode)

  - if entry.last_step?
    = field_set_tag(nil, class: 'privacy-policy-fields') do
      = render('people/privacy_policy_acceptance_field', f: ff, policy_finder: policy_finder)

.btn-toolbar.bottom
  = submit_button(f, t('groups.self_registration.form.submit'))
  = c.back_link
