= turbo_frame_tag "leader_settlement_invoice_form" do
  = standard_form(defined?(invoice_form) ? invoice_form : Event::Courses::LeaderSettlementInvoice.new,
                  url: leader_settlement_pdfs_group_event_participation_path(@group, @event, @participation.id), method: :post) do |f|
    .alert.alert-info= t(".info_text_html")
    = f.error_messages
    = f.labeled_input_field :actual_days, value: defined?(invoice_form) ? invoice_form.actual_days : entry.actual_days
    = f.labeled_input_field(:iban)
    = form_buttons(f, submit_label: t(".create_invoice"), cancel_url: '#')