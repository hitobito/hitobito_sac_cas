#summon-confirmation.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h5.bold.modal-title=t(".modal_title")
      .model-body.p-3
        .btn-group
          = link_to(t(".summon_and_send_mail"),
            summon_group_event_participation_path(group, event, participation, send_email: true),
            remote: true,
            method: :put,
            onclick: "$('#summon-confirmation').modal('hide')",
            class: "btn btn-sm btn-outline-primary")
        .btn-group
          = link_to(t(".summon_and_send_no_mail"),
            summon_group_event_participation_path(group, event, participation, send_email: false),
            remote: true,
            method: :put,
            onclick: "$('#summon-confirmation').modal('hide')",
            class: "btn btn-sm btn-outline-primary")
        .btn-group
          = link_to(t("global.button.cancel"), '#',
            class: "btn btn-sm btn-outline-primary",
            onclick: "event.preventDefault(); $('#summon-confirmation').modal('hide')")
