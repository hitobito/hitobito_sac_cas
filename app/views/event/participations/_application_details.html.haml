= render_attrs(entry, :created_at)
- if entry.states?
  = render_attrs(entry, :state)
- if @event.course?
  = render_attrs(entry, :price, :invoice_state, :actual_days)
- if @event.course? && entry.state == 'canceled'
  = render_attrs(entry, :canceled_at, :cancel_statement)
