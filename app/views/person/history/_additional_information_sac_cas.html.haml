#external_trainings
  %h2
    .mt-4=ExternalTraining.model_name.human(count: 2)
    %span.float-end= action_button(ti(:'link.add'),
                            new_group_person_external_training_path(@group, @person),
                             'plus',
                             class: 'btn-sm')
  = table(@external_trainings, class: 'table table-striped table-fixed') do |t|
    - t.attrs(:event_kind, :name, :provider, :start_at, :finish_at, :training_days, :link, :remarks)
    - action_col_destroy(t) { |e| group_person_external_training_path(@group, @person, e) }
