:css
  body {
    font-family: Hind, Frutiger, Helvetica, Arial, sans-serif;
    line-height: 1.4;
    --padding: 20px;
    --lightgray: #e0e0e0;
  }

  #content {
    padding: var(--padding);
  }

  a {
    color: inherit;
  }

  table {
    border-collapse: collapse;
  }

  tr {
    border-top: 1px solid var(--lightgray);
  }
  thead tr {
    border-top: none;
  }

  td {
    padding: 5px var(--padding) 5px 0;
  }

  footer {
    background-color: var(--lightgray);
    padding: var(--padding);
  }

  address {
    font-style: normal;
  }

  address p {
    margin: 0;
  }
