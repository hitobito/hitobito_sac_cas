%aside.card
  .card-body
    %h2.mb-2.card-title=t('.summary_title')
    .card-text
      %table.table.table-borderless.table-with-total
        %tbody
          %tr
            %td=t('.summary_course_price')
            %td.text-end=number_to_currency(1300, unit: 'CHF', format: '%n %u')
          %tr
            %td=t('.summary_subsidy')
            %td.text-end= number_to_currency(50, unit: 'CHF', format: '%n %u')
        %tfoot
          %tr.border-top
            %td= t('.summary_total')
            %td.text-end.fw-bold= number_to_currency(1300 - 50, unit: 'CHF', format: '%n %u')

%aside.card
  .card-body
    %h2.mb-2.card-title=t('.contact_title')
    .card-text=simple_format(t('.contact_text'))

    .card-text.mt-2
      = icon(:phone)
      %span.ms-1 +41 31 370 18 43
    .card-text
      = icon(:phone)
      %span.ms-1 +41 31 370 18 44
    .card-text
      = icon(:envelope)
      %span.ms-1 alpin@sac-cas.ch
