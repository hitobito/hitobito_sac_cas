%table.table
  %thead
    %tr
      %th=t('groups.self_registration.abo_infos.annual_price_header')
      - if costs.first.country
        %th=t('groups.self_registration.abo_infos.delivery_country_header')
  %tbody
    - costs.each do |cost|
      %tr
        %td=t('groups.self_registration.abo_infos.price_with_vat', amount: format("%2.f", cost.amount))
        - if cost.country
          %td=t("groups.self_registration.abo_infos.#{cost.country}")
