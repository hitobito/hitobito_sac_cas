.well.p-3.row.col-11.col-xxl-5.flex-flow-column.me-auto.ms-3.h-200-px
  .mb-2.h3= person.adult? ? t(".adult") : t(".child")
  .mb-3.fw-bold= "#{person.first_name} #{person.last_name}"
  = labeled(person.class.human_attribute_name(:gender), t("activerecord.attributes.person.genders.#{person.gender.nil? ? "_nil" : person.gender}"))
  = labeled(person.class.human_attribute_name(:birthday), person.birthday.strftime("%d.%m.%Y"), no_value_hide_label: true)
  = labeled(person.class.human_attribute_name(:phone_number), person.phone_number, no_value_hide_label: true)
  = labeled(person.class.human_attribute_name(:email), person.email, no_value_hide_label: true)
