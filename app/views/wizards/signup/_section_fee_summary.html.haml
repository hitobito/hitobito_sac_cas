%aside.card{class: ("d-none" unless active)}
  .card-body
    %h2.card-title=t('.title', section: adult.section)
    .card-text
      %table.table.table-borderless
        %tbody
          %tr
            %td= adult.summary.label
            %td= adult.summary.amount
          %tr.border-top
            %td= family.summary.label
            %td= family.summary.amount
          %tr.border-top
            %td= youth.summary.label
            %td= youth.summary.amount
