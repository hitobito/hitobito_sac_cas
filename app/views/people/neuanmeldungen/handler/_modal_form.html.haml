#neuanmeldungen-handler.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h5.bold.modal-title
          %b= handler.model_name.human(count: count)

      = standard_form [group, handler] do |form|
        .modal-body
          = hidden_field_tag :ids, ids
          .row-fluid
            = ti('text', count: count)
            %b= handler.applicable_people.to_sentence
            = render partial: 'fields', locals: { form: form }
        .modal-footer
          = form.submit(ti('.submit', count: count), class: 'btn btn-sm btn-primary')
          = link_to(ti('button.cancel'), '#',
            class: 'link cancel',
            onclick: "event.preventDefault(); $('#neuanmeldungen-handler').modal('hide')")
