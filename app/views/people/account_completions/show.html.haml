.mx-md-5
  .alert.alert-info
    =t('.explain_confirmation_email')

  = standard_form(person, url: account_completion_path) do |f|
    = f.error_messages
    = hidden_field_tag :token, params[:token]

    = f.labeled_input_fields(:unconfirmed_email)
    = f.labeled_input_field(:password)
    = f.labeled_input_field(:password_confirmation)

    = form_buttons(f, toolbar_class: "bottom")
