- issues = entry.data_quality_issues.order(severity: :desc) if entry.data_quality != "ok"

- if issues.present?
  %h2= Person.human_attribute_name(:data_quality)
  %dl.m-0.p-2.border-bottom
    - issues.each do |issue|
      %dt.mr-2.float-start= format_data_quality_icons(issue.severity)
      %dd.mb-2= issue.message
