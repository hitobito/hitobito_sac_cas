- if can?(:update, entry) && entry.sac_membership_anytime?
  %section.sac_membership
    %h2
      = t('.section_sac_membership') 
      .float-end
        = people_sac_membership_download_dropdown(entry)

    %div
      %dl.dl-horizontal
      .d-flex.justify-content-center
        .qr-code-wrapper
          .inner
            = people_sac_membership_qr_code(entry)
            .hint
              = t('.qr_code_hint')
